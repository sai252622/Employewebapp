@model Employewebapp.Models.RegisterViewModel

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded" style="width: 100%; max-width: 450px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Create an Account</h2>
            <p class="text-muted">Fill in the form to register</p>
        </div>

        @if (TempData["RegisterMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["RegisterMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Register" method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Full Name" />
                <label asp-for="Name"><i class="bi bi-person-fill me-2"></i>Name</label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email address" />
                <label asp-for="Email"><i class="bi bi-envelope-fill me-2"></i>Email</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Password"><i class="bi bi-lock-fill me-2"></i>Password</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword"><i class="bi bi-shield-lock-fill me-2"></i>Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="form-check">
                @Html.CheckBoxFor(model => model.IsAdmin, new { @class = "form-check-input" })
                <label class="form-check-label" for="IsAdmin">Need Admin Access</label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus-fill me-1"></i> Register
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">Already have an account? <a asp-action="Login" class="link-primary">Login here</a></small>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
